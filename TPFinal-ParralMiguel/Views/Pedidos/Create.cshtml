@model TPFinal_ParralMiguel.Models.Pedido


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Crear Pedido</h4>

<hr />
<div class="row">
        <form asp-action="Create">
            <div class="form-group">
            <input class="form-control" type="text" placeholder="PedidoUsuarioId" readonly>
            </div>

            <div class="form-group">
            <input class="form-control" type="text" placeholder="Model.PrecioTotal" readonly>
            </div>
            
            <div class="form-group">
            <input class="form-control" type="text" placeholder="Model.PedidoPreparado" readonly>
            </div>
            
            @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="PedidoPreparado" id="flexCheckChecked" checked="PedidoPreparado">
                    <label class="form-check-label" for="flexCheckChecked">
                        Pedido Preparado
                    </label>
                </div>
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


