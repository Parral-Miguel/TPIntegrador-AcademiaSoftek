@model TPFinal_ParralMiguel.Models.Usuario

@{
    ViewData["Title"] = "Registrar";
}

<h1>Registrar nuevo usuario</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Registrar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UsuarioNombre" class="control-label"></label>
                <input asp-for="UsuarioNombre" class="form-control" />
                <span asp-validation-for="UsuarioNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioMail" class="control-label"></label>
                <input asp-for="UsuarioMail" class="form-control" />
                <span asp-validation-for="UsuarioMail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contrasenia" class="control-label"></label>
                <input asp-for="Contrasenia" class="form-control" />
                <span asp-validation-for="Contrasenia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar a Login</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
