@model Usuario;
@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Biblioteca - Login</title>
    <link rel="stylesheet" href="~/css/estilos.css" asp-append-version="true" />

</head>
<body class="contenedor">
    <div class="contenedor">
        <h2>Login</h2>
        <form method="post" asp-controller="Login" asp-action="Index">
            <div class="elemento">
                <label for="usuario">Usuario:</label>
                <input asp-for="UsuarioNombre" type="text" class="form-control" required />
            </div>
            <div class="elemento">
                <label for="password">Contraseña:</label>
                <input asp-for="Contrasenia" type="password" class="form-control" required />
            </div>

            <div>
                <a asp-controller="Login" asp-action="Registrar">Registrar un usuario</a>
            </div>
            <div class="elemento">
                <input type="submit" value="Ingresar">
            </div>
        </form>
    </div>
</body>
</html>

